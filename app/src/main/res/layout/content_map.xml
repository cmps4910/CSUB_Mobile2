<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.csubmobile.MapActivity" >

<!--    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tilesource="Mapnik" />-->

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:center_latitude="35.349321"
        mapbox:center_longitude="-119.103429"
        mapbox:tilt="30"
        mapbox:style_url="@string/my_style_mapbox"
        mapbox:zoom="16" >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/location_toggle_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_menu_mylocation"
            app:backgroundTint="@color/colorAccent"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_gravity="bottom|right"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/search_toggle_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_search_black_24dp"
            app:backgroundTint="@color/colorAccent"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_gravity="bottom|left"/>
    </com.mapbox.mapboxsdk.maps.MapView>

</RelativeLayout>
